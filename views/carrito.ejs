<% if(user==false ){ %>
    <%- include('include/error') %>
<% }else { %>
    <div class="container">
        <div class="row my-3">
            <% orders.forEach((data)=> { %>
                <div class="col-3 my-2">
                    <div class="card text-center">
                        <div class="card-header">
                            <%= data.status %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= data.name %>
                            </h5>
                            <p class="card-text">
                                <%= data.user %>
                            </p>
                            <!-- valida que el estado de la orden este finalizado -->
                            <% if(data.status == 'finalizado'){ %>
                                <div class="row">
                                    <div class="col">
                                        <a href="/carrito/<%= data._id %>/<%= data.status %>" class="btn btn-primary">Ver
                                            detalles</a>
                                    </div>
                                    <div class="col">
                                        <!-- atributo target para abrir el documento en una nueva pestaÃ±a -->
                                        <a href="/report/invoice/<%= data._id %>" class="btn btn-primary" target="_blank">Factura</a>
                                    </div>
                                </div>
                            <% } else { %>
                                <a href="/carrito/<%= data._id %>/<%= data.status %>" class="btn btn-primary">Ver
                                    detalles</a>
                            <% } %>
                        </div>
                        <div class="card-footer text-muted">
                            <%= data.date %>
                        </div>
                    </div>
                </div>
            <% }) %>
            <div class="col-3 my-2">
                <%- include('include/newList') %>
            </div>
        </div>
    </div>
<% } %>