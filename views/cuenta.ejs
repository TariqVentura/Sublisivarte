<% if(user==false){ %>
    <%- include('include/error') %>
<% } else { %>
    <div class="container">
        <div class="row my-3">
            <div class="col-6 d-flex align-items-center flex-column">
                <p class="fs-4">Acciones</p>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-info w-50 my-2 text-light" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Cambiar contraseña
                </button>
    
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar contraseña</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <%- include('include/newPassword') %>
                        </div>
                    </div>
                </div>
                <% if(data[0].authentification=='desactivado' || !data[0].authentification ){ %>
                    <button class="btn btn-primary" onclick="changeAuthentification('<%= data[0]._id %>', 'activado')">Activar</data.authentification></button>
                <%} else {%>
                    <button class="btn btn-primary" onclick="changeAuthentification('<%= data[0]._id %>', 'desactivado')">Desactivar</button>
                <% } %>
                <button class="btn btn-danger w-50 my-2"><a href="/status/user/<%= user.user %>" class="text-light">Desactivar cuenta</a></button>
            </div>
        </div>
    </div>
                <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="/alerts.js"></script>
                <script src="/cuenta.js"></script>
<% } %>
