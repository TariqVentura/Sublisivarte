<div class="row">
    <main>
        <!-- espacio para productos -->
        <div class="container">
            <div class="row">
                <!-- espacio para productos -->
                <div class="col-9 mt-5">
                    <div class="row mb-3">
                        <div class="row d-flex justify-content-around" id="Nuevos-productos">
                            <% products.forEach((product) => { %>
                                <div class="col-2">
                                    <div class="card border border-0 bg-dark text-light text-center"
                                        style="width: 13rem;">
                                        <img src="/images/<%= product.image %>" class="card-img-top rounded"
                                            alt="...">
                                        <div class="card-body d-grid gap-2">
                                            <h5 class="card-title text-dark"><%= product.product %></h5>
                                            <p class="card-text"></p>
                                            <a href="/producto/<%= product._id %>" class="btn btn-primary rounded">Ver
                                                mas...</a>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

