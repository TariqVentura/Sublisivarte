<!-- formulario nueva cuenta -->
<div class="container my-3">
    <form autocomplete="off" id="form-user">
        <div class="row">
            <div class="col-10">
                <div class="row py-2">
                    <div class="col-4">
                        <label for="name" class="form-label ">Nombres</label>
                        <input type="text" class="form-control " id="name"
                            placeholder="" required name="name">
                    </div>
                    <div class="col-4">
                        <label for="lastname" class="form-label ">Apellidos</label>
                        <input type="text" class="form-control " id="lastname"
                            placeholder="" required name="lastname">
                    </div>
                    <div class="col-4">
                        <label for="username" class="form-label ">Usuario</label>
                        <input type="text" class="form-control " id="username"
                            placeholder="" required name="user">
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4">
                        <label for="email" class="form-label">Correo</label>
                        <input type="email" class="form-control " id="email"
                            placeholder="" required name="email">
                    </div>
                    <div class="col-4">
                        <label for="documento" class="form-label">Documento</label>
                        <input type="text" class="form-control " id="documento"
                            placeholder="" required name="document">
                    </div>
                    <div class="col-4">
                        <label for="password" class="form-label">Clave</label>
                        <input type="password" class="form-control " id="password"
                            placeholder="" required name="password">
                    </div>
                </div>
            </div>
        </div>
        <div class="row py-3">
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Acepto los t√©rminos y condiciones
                    </label>
                    <div class="invalid-feedback">
                        Debe de estar de acuerdo antes de enviar
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-2">
                <button class="btn btn-primary" type="submit">Aceptar</button>
            </div>
        </div>
    </form>
</div>

<script src="/newUser.js"></script>