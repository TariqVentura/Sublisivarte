<!-- formulario nueva cuenta -->
<div class="container my-3">
    <form action="/api/users" method="POST" autocomplete="off">
        <div class="row">
            <div class="col-10">
                <div class="row py-2">
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">Nombres</label>
                        <input type="text" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="name">
                    </div>
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">Apellidos</label>
                        <input type="text" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="lastname">
                    </div>
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">Usuario</label>
                        <input type="text" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="user">
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">Correo</label>
                        <input type="email" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="email">
                    </div>
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">documento</label>
                        <input type="text" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="document">
                    </div>
                    <div class="col-4">
                        <label for="exampleFormControlInput1" class="form-label text-light">Clave</label>
                        <input type="password" class="form-control bg-secondary" id="exampleFormControlInput1"
                            placeholder="" required name="password">
                    </div>
                </div>
            </div>
        </div>
        <div class="row py-3">
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label text-light" for="invalidCheck text-light">
                        Acepta los terminos y condiciones
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-2">
                <input type="text" name="role" value="client" hidden>
                <button class="btn btn-primary" type="submit">Aceptar</button>
            </div>
        </div>
    </form>
</div>